{
  "name": "optimart",
  "version": "0.0.0",
  "description": "NFT marketplace built on the XRP Ledger",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node ./dist/src/server.js",
    "test": "jest --coverage --detectOpenHandles",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/server.ts",
    "lint": "eslint --cache .",
    "format": "eslint --fix . && prettier --write .",
    "db:seed": "npx prisma db seed",
    "swagger:gendoc": "ts-node src/docs/swagger.ts",
    "db:migrate:dev": "npx prisma migrate dev --skip-seed",
    "db:migrate:deploy": "npx prisma migrate deploy",
    "prettier": "prettier --config .prettierrc --write ."
  },
  "keywords": [],
  "author": "",
  "license": "AGPL",
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "supertest": "^6.3.3",
    "swagger-autogen": "^2.23.5",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/morgan": "^1.9.4",
    "cors": "^2.8.5",
    "csv-parse": "^5.4.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "http-status": "^1.6.2",
    "joi": "^17.9.2",
    "morgan": "^1.10.0",
    "prisma": "^5.0.0",
    "swagger-ui-express": "^5.0.0",
    "verify-xrpl-signature": "^1.0.0",
    "winston": "^3.10.0",
    "xrpl": "^2.7.0"
  },
  "prisma": {
    "schema": "./src/prisma/schema.prisma",
    "seed": "ts-node ./src/prisma/seeds/index.ts"
  }
}
